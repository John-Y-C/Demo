<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"

    android:orientation="vertical"
    android:background="#3EC5FF"
    tools:context="com.example.app2048_1.OptionActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:orientation="vertical"
        android:layout_weight="1">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Configuration"
            android:textSize="40sp"
            android:layout_marginBottom="10px"
            android:gravity="center"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="#FFF"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:orientation="vertical"
        android:layout_weight="4">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_margin="20px"
            android:text="GameLines"
            android:textSize="30sp"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/option_ac_button"
            android:id="@+id/bt_optionactivity_lines"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_margin="20px"
            android:text="TargetScore"
            android:textSize="30sp"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/option_ac_button"
            android:id="@+id/bt_optionactivity_score"/>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="2">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Contact Me"
            android:gravity="center"
            android:textSize="20sp"
            android:layout_marginBottom="20px"
            android:layout_alignParentBottom="true"
            android:id="@+id/tv_optionActivity_ctc"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="#FFF"
            android:layout_above="@id/tv_optionActivity_ctc"
            android:id="@+id/v_optionActivity_bottomF"
            android:layout_marginTop="20px"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/v_optionActivity_bottomF"
            android:layout_alignParentLeft="true"
            android:text="BACK"
            android:background="@drawable/option_ac_button"
            android:id="@+id/bt_optionactivity_back" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/v_optionActivity_bottomF"
            android:layout_alignParentRight="true"
            android:text="DONE"
            android:background="@drawable/option_ac_button"
            android:id="@+id/bt_optionactivity_done"/>

    </RelativeLayout>

</LinearLayout>
